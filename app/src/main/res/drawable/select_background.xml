            <solid android:color="#66aaaaaa" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/channel_bg_stroke_radius" />
            <stroke android:width="@dimen/channel_bg_stroke_width" android:color="#6611aaff" />
            <solid android:color="#00aaaaaa" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/channel_bg_stroke_radius" />
            <stroke android:width="@dimen/channel_bg_stroke_width" android:color="#00ffaa11" />
            <solid android:color="#00aaaaaa" />
        </shape>
    </item>
</selector>